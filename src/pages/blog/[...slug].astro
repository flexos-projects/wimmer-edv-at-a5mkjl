---import { CollectionEntry, getCollection } from 'astro:content';import Layout from '../../layouts/Layout.astro';import '../../styles/global.css';export async function getStaticPaths() {const blogEntries = await getCollection('blog');return blogEntries.map((entry) => ({params: { slug: entry.slug },props: { entry },}));}interface Props {entry: CollectionEntry<'blog'>;}const { entry } = Astro.props;const { Content } = await entry.render();---<Layout title={entry.data.title + ' - Wimmer Consulting GmbH'} description={entry.data.description}><article class="py-12 bg-gray-50"><div class="container mx-auto px-4 max-w-4xl bg-white rounded-lg shadow-lg p-8"><header class="text-center mb-10"><h1 class="text-4xl font-extrabold text-blue-800 mb-4">{entry.data.title}</h1><p class="text-lg text-gray-600">Veröffentlicht am {entry.data.pubDate.toLocaleDateString('de-DE', {year: 'numeric',month: 'long',day: 'numeric',})}</p><p class="text-md text-gray-500">Von {entry.data.author}</p><div class="flex flex-wrap justify-center gap-2 mt-4">{entry.data.tags.map((tag) => (<span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full">{tag}</span>))}</div></header>{entry.data.image && (<img src={entry.data.image} alt={entry.data.title} class="w-full h-80 object-cover rounded-md mb-10" />)}<div class="prose prose-lg mx-auto text-gray-800 leading-relaxed"><Content /></div><footer class="mt-10 pt-6 border-t border-gray-200 text-center"><p class="text-gray-600">Möchten Sie mehr erfahren? <a href="/kontakt" class="text-blue-600 hover:underline">Kontaktieren Sie Wimmer Consulting GmbH</a> für eine persönliche Beratung.</p></footer></div></article></Layout>