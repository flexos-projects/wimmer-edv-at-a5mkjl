---import { getCollection } from 'astro:content';import Layout from '../../layouts/Layout.astro';import '../../styles/global.css';const allPosts = await getCollection('blog');const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());---<Layout title="Blog - Wimmer Consulting GmbH" description="Aktuelle Blogbeiträge und Artikel von Wimmer Consulting GmbH zu IT-Beratung, ERP, Cloud, Cybersicherheit und Softwareentwicklung in Österreich."><section class="py-12 bg-gray-50"><div class="container mx-auto px-4 max-w-4xl"><h1 class="text-4xl font-extrabold text-center text-blue-800 mb-10">Unser Blog: Wissen für Ihr Business</h1><p class="text-lg text-center text-gray-700 mb-12">Bleiben Sie auf dem Laufenden mit den neuesten Einblicken und Expertenmeinungen von Wimmer Consulting GmbH zu IT-Lösungen, Digitalisierung und strategischer Prozessoptimierung für KMU in Österreich.</p><div class="grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2">{sortedPosts.map((post) => (<article class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform transform hover:scale-105 duration-300"><a href={`/blog/${post.slug}`}><img src={post.data.image || '/blog-placeholder.webp'} alt={post.data.title} class="w-full h-48 object-cover" /></a><div class="p-6"><p class="text-sm text-gray-500 mb-2">{post.data.pubDate.toLocaleDateString('de-DE', {year: 'numeric',month: 'long',day: 'numeric',})}</p><h2 class="text-2xl font-bold text-blue-700 mb-3"><a href={`/blog/${post.slug}`} class="hover:text-blue-900 transition-colors duration-200">{post.data.title}</a></h2><p class="text-gray-700 leading-relaxed mb-4">{post.data.description}</p><div class="flex flex-wrap gap-2 mb-4">{post.data.tags.map((tag) => (<span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full">{tag}</span>))}</div><a href={`/blog/${post.slug}`} class="inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold">Weiterlesen<svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg></a></div></article>))}</div></div></section></Layout>